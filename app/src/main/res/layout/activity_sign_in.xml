<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/primary_color"
    android:padding="16dp"
    tools:context=".Views.SignIn">

    <ProgressBar
        android:id="@+id/_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Virtuous Voice"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use this application by"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/_sign_in_as"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="signing in as child"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:textSize="24dp"/>

        <EditText
            android:id="@+id/_sign_in_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:hint="Enter your email"
            android:textSize="20sp"
            android:gravity="center"
            android:textColorHint="@color/disabled_white"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/edit_text_background"/>

        <EditText
            android:id="@+id/_sign_in_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:hint="Enter your password"
            android:textSize="20sp"
            android:gravity="center"
            android:inputType="textPassword"
            android:textColorHint="@color/disabled_white"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/edit_text_background"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/_btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="Confirm"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/button_background"/>

        <TextView
            android:id="@+id/_sign_in_screen_sign_up_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create account!"
            android:paddingTop="8dp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:textSize="18dp"/>

    </LinearLayout>

</LinearLayout>