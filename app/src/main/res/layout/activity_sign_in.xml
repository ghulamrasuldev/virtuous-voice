<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/primary_color"
    android:padding="16dp"
    tools:context=".Views.SignIn">

    <ProgressBar
        android:id="@+id/_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/SIGN_IN_SECTION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Virtuous Voice"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use this application by"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/_sign_in_as"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="signing in as parent"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="24dp"/>

            <EditText
                android:id="@+id/_sign_in_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="Enter your phone"
                android:textSize="20sp"
                android:gravity="center"
                android:textColorHint="@color/disabled_white"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/edit_text_background"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/_btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Confirm"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/ripple_effect"/>

            <TextView
                android:id="@+id/_sign_in_go_as_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go as child!"
                android:paddingTop="8dp"
                android:layout_gravity="end"
                android:textColor="@color/secondary_color"
                android:fontFamily="@font/montserrat"
                android:textSize="18dp"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/OTP_SECTION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:clickable="true"
            android:id="@+id/_sign_in_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <EditText
            android:id="@+id/_sign_in_entered_otp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:hint="Verify password"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/disabled_white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/_btn_sign_in_confirm_otp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="Signup"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/button_background"/>


    </LinearLayout>


</LinearLayout>