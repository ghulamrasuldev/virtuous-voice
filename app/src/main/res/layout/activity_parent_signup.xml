<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".Views.ParentSignup">

    <LinearLayout
        android:id="@+id/SIGNUP_SECTION"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Virtuous Voice"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create account as parent"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:textSize="24dp"/>

            <EditText
                android:id="@+id/_sign_up_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="Your email"
                android:textSize="20sp"
                android:gravity="center"
                android:textColorHint="@color/disabled_white"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/edit_text_background"/>

            <EditText
                android:id="@+id/_sign_up_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="Your phone"
                android:textSize="20sp"
                android:inputType="number"
                android:gravity="center"
                android:textColorHint="@color/disabled_white"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/edit_text_background"/>

            <EditText
                android:id="@+id/_sign_up_username"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:hint="Your name"
                android:textColor="@color/white"
                android:textColorHint="@color/disabled_white"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/_sign_up_number"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="Contact number"
                android:textSize="20sp"
                android:gravity="center"
                android:inputType="number"
                android:textColorHint="@color/disabled_white"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/edit_text_background"/>

            <EditText
                android:id="@+id/_sign_up_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="Your password"
                android:textSize="20sp"
                android:gravity="center"
                android:inputType="textPassword"
                android:textColorHint="@color/disabled_white"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/edit_text_background"/>


            <EditText
                android:id="@+id/_sign_up_verify_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:hint="Verify password"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/disabled_white"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/_btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Signup"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/button_background"/>

            <TextView
                android:id="@+id/_btn_parent_signup_signin_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have account?"
                android:paddingTop="8dp"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:clickable="true"
                android:textSize="18dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/_parent_signup_as_child"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:text="GO AS CHILD"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"
                android:background="@drawable/ripple_effect"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/OTP_SECTION"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:clickable="true"
            android:id="@+id/_signup_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <EditText
            android:id="@+id/_sign_up_otp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:hint="Verify password"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/disabled_white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/_btn_sign_up_confirm_otp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="Signup"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/button_background"/>


    </LinearLayout>


</LinearLayout>